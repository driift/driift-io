// Settings
// config ----------------
base-font-size = 16px
base-line-height = 24px
default-rhythm-border-style = solid
relative-font-sizing = true
min-line-padding = 4px
font-unit = relative-font-sizing ? 1em : base-font-size
// rupture scale config
// base - mobile - tablet - desktop
scale = 0 400px 600px 800px 1050px
// ----------------------
browser-default-font-size = 16px
base-rhythm-unit = base-line-height / base-font-size * font-unit
base-leader = (base-line-height - base-font-size) * font-unit / base-font-size
base-half-leader = base-leader / 2
base-font-stack = 'Source Sans Pro', sans-serif
accent-font-stack = 'apercu_bold-webfont', 'Source Sans Pro', sans-serif
font-stack = 'apercu_light-webfont', 'Source Sans Pro', sans-serif
base-font-color = #000
highlight-color = #FF3A53
establish-baseline('normalize')

font-face('apercu_light-webfont', '/fonts/apercu')
font-face('apercu_medium-webfont', '/fonts/apercu')
font-face('apercu_bold-webfont', '/fonts/apercu')

base(base-font-stack, base-font-size, base-font-color)

/**
 * Debug
 */
// edit()
main
  transition: all .25s ease-in-out-expo

/*
  Typography
 */
typography()
code-blocks()
forms()
fields()
flash-notices()

/*
  Elements
 */
table(border = true, striped = true, condensed = false)
flash-notices()

// buttons

.btn
  btn-primary-color = #FF3A53
  uppercase()
  transition()
  letter-spacing: 2px
  border: none
  &.btn-hero
    simple-button(btn-primary-color, 'large', #fff)
    font-weight: normal
  &.btn-primary
    simple-button(btn-primary-color, 'medium', #fff)
    font-weight: normal
  &.btn-outline
    @extend .btn.btn-primary
    background: transparent
    border: 4px #FF3A53 solid
  &.btn-no-outline
    @extend .btn.btn-outline
    border: 4px transparent solid

// Lists
.inline-list
  inline-list()

.reset-list
  reset-list()

section > header
section > nav
  center(1024px)

+mobile()
  base(base-font-stack, 14px, base-font-color)
  nav.nav .nav-brand
    height: 30px !important

// Mobile menu
.slicknav_menu
  +below(2)
    display: block
  .slicknav_btn
    reset-link()

.slicknav_nav
  li
    a
      padding: 0 15px
      adjust-font-size-to(20px)
      display: block
      reset-link()
      color: #fff
      &:hover
        background: highlight-color
      uppercase()
      font-family: accent-font-stack
      font-weight: normal
      letter-spacing: 2px
      color: #fff

nav.nav
  +below(2)
    min-height: -rhythm(2)
    *
      display: none
  align(vertical)
  position: relative
  min-height: -rhythm(4)
  .nav-brand
    col(1/4)
    background: url('/img/driift-logo.png') no-repeat left center
    background-size: contain
    text-indent: -99999px
    width: 224px
    height: 43px
    span
      display: none
  .nav-menu
    col(3/4)
    ul
      float: right
      li
        uppercase()
        font-family: accent-font-stack
        letter-spacing: 2px
        color: #fff
        a
          link(#fff)
          adjust-font-size-to(14px)

section.hero
  background: url('/img/background.png')
  background-size cover
  height: 100vh
  text-align: center
  h1
    color: #fff
    adjust-font-size-to(52px)
    font-weight: normal
  .hero-copy
    center(720px)
    p
      adjust-font-size-to(20px)
      adjust-leading-to(1)
    color: #fff
  .hero-action
    margin-leader(2)
