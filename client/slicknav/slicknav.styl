.touch .slicknav_menu {
  display: block;
}
.slicknav_menu {
  display: none;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 100;
  background: #222 url("/img/driift-logo.png") no-repeat 20px 15px;
  -webkit-background-size: auto 26px;
  background-size: auto 26px;
  -webkit-transition: background-position 0.2s cubic-bezier(0.16, 0.68, 0.43, 0.99);
  transition: background-position 0.2s cubic-bezier(0.16, 0.68, 0.43, 0.99);
}

.slicknav_menu:before,
.slicknav_menu:after {
  content: " ";
  display: table;
}
.slicknav_menu:after {
  clear: both;
}
.pushy-active .slicknav_menu {
  background-position: 20px 35%;
}
.slicknav_btn {
  position: relative;
  display: block;
  vertical-align: middle;
  float: right;
  cursor: pointer;
  text-decoration: none;
  padding: 20px;
}
.slicknav_icon {
  float: left;
  margin: 0.188em 0 0 0.438em;
}
.slicknav_no-text {
  margin: 0;
}
.slicknav_icon-bar {
  width: 2em;
  height: 0.2em;
  display: block;
  background: #fff;
  margin-top: 0.3em;
  -webkit-transform: rotate(0);
  -ms-transform: rotate(0);
  transform: rotate(0);
  -webkit-transition: -webkit-transform 80ms ease-out;
  transition: transform 80ms ease-out;
}
.slicknav_icon-bar:first-child {
  margin-top: 0;
}
.slicknav_open .slicknav_icon-bar {
  background: #222;
}
.slicknav_open .slicknav_icon-bar:first-child,
.slicknav_open .slicknav_icon-bar:last-child {
  background: #fff;
  position: relative;
  z-index: 1;
}
.slicknav_open .slicknav_icon-bar:first-child {
  top: 0.5em;
  -webkit-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.slicknav_open .slicknav_icon-bar:last-child {
  top: -0.5em;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}
.slicknav_nav {
  clear: both;
  margin: 0;
  padding: 0;
}
.slicknav_item {
  display: block;
  cursor: pointer;
}
.slicknav_nav li {
  list-style: none;
  overflow: hidden;
}